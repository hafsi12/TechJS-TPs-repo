doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title TP2 - #{title || 'Authentication System'}
    script(src="https://cdn.tailwindcss.com")
  body(class="bg-gray-100 min-h-screen")
    nav(class="bg-blue-600 text-white shadow-lg")
      div(class="container mx-auto px-4")
        div(class="flex justify-between items-center py-4")
          a(href="/" class="text-2xl font-bold") BookStore
          div(class="flex items-center space-x-4")
            if user
              span Welcome, #{user.name}
              a(href="/books" class="hover:bg-blue-700 px-3 py-2 rounded") Books
              a(href="/logout" class="hover:bg-blue-700 px-3 py-2 rounded") Logout
            else
              a(href="/login" class="hover:bg-blue-700 px-3 py-2 rounded") Login
              a(href="/register" class="hover:bg-blue-700 px-3 py-2 rounded") Register

    main(class="container mx-auto px-4 py-8")
      if messages && messages.length > 0
        each message in messages
          div(class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4")
            span= message

      block content

    footer(class="bg-gray-800 text-white py-8 mt-12")
      div(class="container mx-auto px-4 text-center")
        p &copy; 2024 TP2 Authentication System. All rights reserved.