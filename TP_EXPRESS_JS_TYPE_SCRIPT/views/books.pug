extends layout.pug

block content
  div(class="bg-white rounded-lg shadow-md p-6")
    div(class="flex justify-between items-center mb-6")
      h1(class="text-3xl font-bold text-gray-800") Our Book Collection
      div(class="text-sm text-gray-600")
        span Welcome back,
        span(class="font-semibold") #{user.name}

    div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6")
      each book in books
        div(class="bg-gray-50 rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow")
          h3(class="text-xl font-bold text-gray-800 mb-2")= book.title
          div(class="space-y-1 text-gray-600")
            p
              span(class="font-semibold") Author:
              span= book.author
            p
              span(class="font-semibold") Year:
              span= book.year
            p
              span(class="font-semibold") Genre:
              span(class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full")= book.genre

    div(class="mt-8 text-center")
      p(class="text-gray-600") Found #{books.length} books in our collection